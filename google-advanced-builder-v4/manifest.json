{
  "manifest_version": 3,
  "name": "Google Advanced Search Builder PRO",
  "version": "4.2",
  "permissions": ["tabs","activeTab","scripting","storage","downloads"],
  "host_permissions": ["https://www.google.com/search*"],
  "action": { "default_popup": "popup.html" },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
  ,
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "js": ["content.js"],
	  "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
	  "resources": ["popup.html", "popup.js"]
    }
	
  ]

 
}
